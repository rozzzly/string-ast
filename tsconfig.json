{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
        "outDir": "./bin",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "suppressExcessPropertyErrors": false,
        "noFallthroughCasesInSwitch": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "rootDir": ".",
        "removeComments": false,
        "charset": "utf-8"
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "./bin",
        "./dist",
        "./node_modules"
    ],
    "typeAcquisition": {
        "enable": true
    }
}